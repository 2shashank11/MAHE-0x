<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Reset Password</title>
</head>

<body>

    <div class="container mt-4">
        <form action="/forgot-password/send-otp" method="post" enctype="application/x-www-form-urlencoded">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
            </div>
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= locals.error %>
                </div>
                <% } %>
                    <% if (locals.success) { %>
                        <div class="alert alert-success" role="alert">
                            <%= locals.success %>
                        </div>
                        <% } %>
                            <button type="submit" class="btn btn-primary">Send OTP</button>
        </form>
    </div>
    <div class="container mt-4">
        <form action="/forgot-password/verify-otp" method="post">
            <div class="mb-3">
                <label for="otp" class="form-label">OTP</label>
                <input type="number" class="form-control" id="otp" name="otp" aria-describedby="emailHelp">
            </div>
            <% if (locals.notVerified) { %>
                <div class="alert alert-danger" role="alert">
                    <%= locals.notVerified %>
                </div>
                <% } %>
                    <% if (locals.expired) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= locals.expired %>
                        </div>
                        <% } %>
                            <button type="submit" class="btn btn-primary">Verify</button>
        </form>
    </div>

    <%- include('./partials/script') %>
</body>

</html>